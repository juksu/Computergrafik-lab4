				<reflectance r="0.0"/>
				<transmittance t="0.0"/>
				<refraction iof="2.3"/>
			</material_solid>
		</sphere>
		<sphere radius="1.0">
			<position x="2.1" y="0.0" z="-3.0"/>
			<material_solid>
				<color r="0.18" g="0.50" b="0.17"/>
				<phong ka="0.3" kd="0.9" ks="1.0" exponent="200"/>
				<reflectance r="0.0"/>
				<transmittance t="0.0"/>
				<refraction iof="2.3"/>
			</material_solid>
		</sphere>
